= form_for @course, html: { class: "form-horizontal", role: "form" } do |f|
  -if @course.errors.any?
    .alert.alert-danger.alert-dismissable{role: "alert"}
      %button.close{type: "button", data: {dismiss: "alert"} }
        %span{aria: {hidden: "true"} } &times;
        %span.sr-only Close
      %h4= "#{pluralize(@course.errors.count, "error")} prohibited this course from being saved:"

      %ul
        - @course.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :price, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :price, class: 'form-control'
  .form-group
    = f.label :description, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_area :description, class: 'form-control'
  .form-group
    = f.label :video_promo, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_area :video_promo, class: 'form-control'
  .form-group
    = f.label :total_time, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :total_time, class: 'form-control'
  .form-group
    = f.label :image, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :image, class: 'form-control'
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: 'btn btn-primary'
