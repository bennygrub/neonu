.page-header
  = link_to courses_path, class: 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    Back
  = link_to edit_course_path(@course), class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    Edit
  %h1 Show course

%dl.dl-horizontal
  %dt Name:
  %dd= @course.name
  %dt Price:
  %dd= @course.price
  %dt Description:
  %dd= @course.description
  %dt Video promo:
  %dd= @course.video_promo
  %dt Total time:
  %dd= @course.total_time
  %dt Image:
  %dd= @course.image
